---
interface Props {
  img?: string
  title: string
  description: string
  background?: string
  class?: string
}

const { img, title, description, background } = Astro.props
---

<div class={`${Astro.props.class} text-start py-10 px-8 rounded-lg shadow-2xl`}>
  <img src={img} alt='' />

  <h3 class='font-bold text-2xl pt-6 pb-4'>{title}</h3>
  <p class='font-openSans font-normal'>{description}</p>
</div>
